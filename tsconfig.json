{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowImportingTsExtensions": true,
    "noEmit": true, // or "emitDeclarationOnly": true
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "@testing-library/jest-dom", "node"]
  },
  "include": ["src", "src/__test__"]
}
